<CodeSnippet Format="1.0.0" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <Header>
    <Title>XmlReader Variable</Title>
    <Shortcut>u_xmlrr</Shortcut>
    <Description>XmlReader variable declaration.</Description>
    <Author>Josef Pihrt</Author>
    <SnippetTypes>
      <SnippetType>Expansion</SnippetType>
    </SnippetTypes>
  </Header>
  <Snippet>
    <Imports>
      <Import>
        <Namespace>System.Xml</Namespace>
      </Import>
    </Imports>
    <Declarations>
      <Literal>
        <ID>argument</ID>
        <ToolTip>Argument(s)</ToolTip>
        <Default>argument</Default>
      </Literal>
      <Literal>
        <ID>identifier</ID>
        <ToolTip>Identifier name</ToolTip>
        <Default>reader</Default>
      </Literal>
    </Declarations>
    <Code Language="VB"><![CDATA[Using $identifier$ = XmlReader.Create($argument$)
	$end$
End Using]]></Code>
  </Snippet>
</CodeSnippet>